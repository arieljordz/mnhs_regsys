                                {
                                    var No = i + 1;
                                    if (StudentListGradeLevel.GradeLevelIDGirls1[i].GradeLevelID == 1)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white; border-left: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold">
                                                <span style="font-size: 15px;">@No</span>. <span class="ml-1" style="font-size: 15px;">@StudentListGradeLevel.GradeLevelIDGirls1[i].CompleteName</span>
                                            </z>
                                        </div>
                                    }
                                }

                                @if (Girlscnt1 < Highiestcnt)
                                {
                                    int dif = Highiestcnt - Girlscnt1;
                                    for (int i = 0; i < dif; i++)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white; border-left: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold"></z>
                                        </div>
                                    }
                                }
                            </z>
                            <z class="col-md-3 pl-0 pr-0">
                                @for (int i = 0; i < StudentListGradeLevel.GradeLevelIDBoys2.Count(); i++)
                                {
                                    var No = i + 1;
                                    if (StudentListGradeLevel.GradeLevelIDBoys2[i].GradeLevelID == 2)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white; border-left: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold">
                                                <span style="font-size: 15px;">@No</span>. <span class="ml-1" style="font-size: 15px;">@StudentListGradeLevel.GradeLevelIDBoys2[i].CompleteName</span>
                                            </z>
                                        </div>
                                    }
                                }

                                @if (Boyscnt2 < Highiestcnt)
                                {
                                    int dif = Highiestcnt - Boyscnt2;
                                    for (int i = 0; i < dif; i++)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white; border-left: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold"></z>
                                        </div>
                                    }
                                }
                            </z>

                            <z class="col-md-3 pl-0 pr-0">
                                @for (int i = 0; i < StudentListGradeLevel.GradeLevelIDGirls2.Count(); i++)
                                {
                                    var No = i + 1;
                                    if (StudentListGradeLevel.GradeLevelIDGirls2[i].GradeLevelID == 2)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white; border-left: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold">
                                                <span style="font-size: 15px;">@No</span>. <span class="ml-1" style="font-size: 15px;">@StudentListGradeLevel.GradeLevelIDGirls2[i].CompleteName</span>
                                            </z>
                                        </div>
                                    }
                                }

                                @if (Girlscnt2 < Highiestcnt)
                                {
                                    int dif = Highiestcnt - Girlscnt2;
                                    for (int i = 0; i < dif; i++)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white; border-left: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold"></z>
                                        </div>
                                    }
                                }
                            </z>

                        </div>
                        <div class="pb-xl-5">
                        </div>
                        <div class="pb-xl-5">
                        </div>
                        <div class="pb-xl-5">
                        </div>
                        <div class="pb-xl-5">
                        </div>
                        <div class="pb-xl-5">
                        </div>
                        <div class="pb-xl-5">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

