                                    border-left: white;">
                                <z class="d-flex justify-content-center p-2 text-bold">GIRLS</z>
                            </div>
                        </div>
                        <div class="row mr-0 ml-0">
                            <z class="col-md-3 pl-0 pr-0">
                                @for (int i = 0; i < StudentListGradeLevel.GradeLevelIDBoys1.Count(); i++)
                                {
                                    var No = i + 1;
                                    if (StudentListGradeLevel.GradeLevelIDBoys1[i].GradeLevelID == 1)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold">
                                                <span style="font-size: 15px;">@No</span>. <span class="ml-1" style="font-size: 15px;">@StudentListGradeLevel.GradeLevelIDBoys1[i].CompleteName</span>
                                            </z>
                                        </div>
                                    }
                                }

                                @if (Boyscnt1 < Highiestcnt)
                                {
                                    int dif = Highiestcnt - Boyscnt1;
                                    for (int i = 0; i < dif; i++)
                                    {
                                        <div style="border: thin solid #2d2c2c; width: 100%; height: 30px; border-top: white;">
                                            <z class="d-flex justify-content-start p-2 text-bold"></z>
                                        </div>
                                    }
                                }
                            </z>
                            <z class="col-md-3 pl-0 pr-0">
