@using MNHS_RegSys.Models;
@*Start of Static Report*@
@{
    mnhsregsysEntities e = new mnhsregsysEntities();
    var Grade11 = e.tbl_GradeLevel.Where(a => a.Description.ToLower().Contains("grade 11")).SingleOrDefault().GradeLevelID;
    var Grade12 = e.tbl_GradeLevel.Where(a => a.Description.ToLower().Contains("grade 12")).SingleOrDefault().GradeLevelID;
    var Boyscnt1 = e.tbl_Student.Where(a => a.GradeLevelID == Grade11 && a.GenderID == 1).Count();
    var Girlscnt1 = e.tbl_Student.Where(a => a.GradeLevelID == Grade11 && a.GenderID == 2).Count();
    var Boyscnt2 = e.tbl_Student.Where(a => a.GradeLevelID == Grade12 && a.GenderID == 1).Count();
    var Girlscnt2 = e.tbl_Student.Where(a => a.GradeLevelID == Grade12 && a.GenderID == 2).Count();

    int[] _counter = new int[4];
    _counter[0] = Boyscnt1;
    _counter[1] = Girlscnt1;
    _counter[2] = Boyscnt2;
    _counter[3] = Girlscnt2;

    var Highiestcnt = 0;
    for (int i = 0; i < _counter.Length; i++)
    {
        if (Highiestcnt <= _counter[i])
        {
            Highiestcnt = _counter[i];
        }
    }
}
<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="d-flex justify-content-center">
